<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/purple_700">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_50"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_70"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.6" />

    <TextView
        android:id="@+id/days_count"
        style="@style/Text.Big.Bold"
        android:text="05"
        app:layout_constraintBottom_toTopOf="@id/guideline_70"
        app:layout_constraintEnd_toEndOf="@id/days_title"
        app:layout_constraintStart_toStartOf="@id/days_title" />

    <TextView
        android:id="@+id/days_title"
        style="@style/Text.Small"
        android:layout_marginEnd="16dp"
        android:text="дней"
        app:layout_constraintEnd_toStartOf="@+id/hours_title"
        app:layout_constraintTop_toBottomOf="@id/guideline_70" />

    <TextView
        android:id="@+id/hours_count"
        style="@style/Text.Big.Bold"
        android:text="14"
        app:layout_constraintBottom_toTopOf="@id/guideline_70"
        app:layout_constraintEnd_toEndOf="@id/hours_title"
        app:layout_constraintStart_toStartOf="@id/hours_title" />

    <TextView
        android:id="@+id/hours_title"
        style="@style/Text.Small"
        android:layout_marginEnd="8dp"
        android:text="часов"
        app:layout_constraintEnd_toStartOf="@+id/guideline_50"
        app:layout_constraintTop_toBottomOf="@id/guideline_70" />

    <TextView
        android:id="@+id/minutes_count"
        style="@style/Text.Big.Bold"
        android:text="13"
        app:layout_constraintBottom_toTopOf="@id/guideline_70"
        app:layout_constraintEnd_toEndOf="@id/minutes_title"
        app:layout_constraintStart_toStartOf="@id/minutes_title" />

    <TextView
        android:id="@+id/minutes_title"
        style="@style/Text.Small"
        android:layout_marginStart="8dp"
        android:text="минут"
        app:layout_constraintStart_toEndOf="@+id/guideline_50"
        app:layout_constraintTop_toBottomOf="@id/guideline_70" />

    <TextView
        android:id="@+id/seconds_count"
        style="@style/Text.Big.Bold"
        android:text="05"
        app:layout_constraintBottom_toTopOf="@id/guideline_70"
        app:layout_constraintEnd_toEndOf="@id/seconds_title"
        app:layout_constraintStart_toStartOf="@id/seconds_title" />

    <TextView
        android:id="@+id/seconds_title"
        style="@style/Text.Small"
        android:layout_marginStart="16dp"
        android:text="секунд"
        app:layout_constraintStart_toEndOf="@+id/minutes_title"
        app:layout_constraintTop_toBottomOf="@id/guideline_70" />

</androidx.constraintlayout.widget.ConstraintLayout>