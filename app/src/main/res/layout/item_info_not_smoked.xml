<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    app:cardElevation="6dp"
    app:cardCornerRadius="24dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_timer_rounded">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/info_not_smoked_icon"
            style="@style/InfoAvatar"
            android:src="@drawable/ic_warning"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/info_not_smoked_title"
            style="@style/Text.MainInfo.Medium"
            android:text="Невыкуренных пачек"
            app:layout_constraintBottom_toBottomOf="@id/info_not_smoked_icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/info_not_smoked_icon"
            app:layout_constraintTop_toTopOf="@id/info_not_smoked_icon" />

        <TextView
            android:id="@+id/info_not_smoked_value"
            style="@style/Text.Big.Bold"
            android:text="37"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/info_not_smoked_icon"
            app:layout_constraintTop_toBottomOf="@id/info_not_smoked_icon" />

        <TextView
            android:id="@+id/info_not_smoked_value_description"
            style="@style/Text.Medium"
            android:layout_marginStart="8dp"
            android:text="пачек"
            app:layout_constraintBaseline_toBaselineOf="@id/info_not_smoked_value"
            app:layout_constraintBottom_toBottomOf="@id/info_not_smoked_value"
            app:layout_constraintStart_toEndOf="@id/info_not_smoked_value" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>